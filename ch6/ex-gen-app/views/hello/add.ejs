<!doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <header>
    <h1><%= title %></h1>
  </header>
  <main>
    <p><%- content %></p>
    <form action="/hello/add" method="post">
      <p>
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= form.name %>">
      </p>
      <p>
        <label for="mail">Mail</label>
        <input type="text" name="mail" id="mail" value="<%= form.mail %>">
      </p>
      <p>
        <label for="age">Age</label>
        <input type="text" name="age" id="age" value="<%= form.age %>">
      </p>
      <p>
        <input type="submit" value="作成">
      </p>
    </form>
  </main>
</body>
</html>