<!doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <header>
    <h1><%= title %></h1>
  </header>
  <main>
    <p><%= content %></p>
    <table>
      <tr>
        <th>Name</th>
        <td><%= mydata.name %></td>
      </tr>
      <tr>
        <th>Mail</th>
        <td><%= mydata.mail %></td>
      </tr>
      <tr>
        <th>Age</th>
        <td><%= mydata.age %></td>
      </tr>
    </table>
    <form action="/hello/delete" method="post">
      <input type="hidden" name="id" value="<%= mydata.id %>">
      <input type="submit" value="削除">
    </form>
  </main>
</body>
</html>
